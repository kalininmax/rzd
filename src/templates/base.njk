{% from "../components/system/component.njk" import component %}

<!DOCTYPE html>
<html class="page _loading" lang="{{ site.lang }}">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>
	{% block title %}
		{% if title %}
			{{ title }} | {{ site.title }}
		{% else %}
			{{ site.title }}
		{% endif %}
	{% endblock %}
	</title>

	<meta name="description" content="{{ site.desc }}">

	<meta property="og:image" content="/assets/images/og-image.png">
	<meta property="og:image:width" content="1200"/>
	<meta property="og:image:height" content="630"/>
	<meta name="twitter:card" content="summary_large_image">

	<link rel="preload" href="/assets/fonts/FSRailway-Regular.woff2" as="font" type="font/woff2" crossorigin>
	<link rel="preload" href="/assets/fonts/FSRailway-Bold.woff2" as="font" type="font/woff2" crossorigin>

	<link rel="stylesheet" href="/assets/styles/index.css?{% hash %}">

	{% include "./_favicons.njk" %}
	{% include "./_head-scripts.njk" %}

	<script defer src="/assets/scripts/index.js?{% hash %}"></script>
</head>

<body class="page__body">
	{% svgSprite %}

	<div class="page__wrapper wrapper">
	{% block content %}{% endblock %}
	</div>

</body>

</html>
